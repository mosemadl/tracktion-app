@model IEnumerable<TracktionApp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.strLast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strFirst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.strLast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strFirst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strRole)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.strUsername">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.strUsername">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.strUsername">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
